body[data-page="landing"]
  .color
    &.theme
      color                     : THEME
  .bck
    position                    : relative
    background-size             : cover !important
    background-position         : 50% 50%
    &.dots
      z-index                   : 0
      color                     : WHITE
      &:before
        content                 : ""
        z-index                 : 0
        position                : absolute
        top                     : 0
        right                   : 0
        left                    : 0
        width                   : 100%
        height                  : 100%
        background              : url("/assets/img/background-dots.png") repeat top left
        transition                opacity ANIMATION_DURATION
      &:hover
        &:before
          opacity               : 0.75
    &.city
      background-image          : url("/assets/img/background-city.jpg")
    &.story
      background-image          : url("/assets/img/background-story-3.jpg")
    &.shop
      background-image          : url("/assets/img/background-shop.jpg")
    &.work
      background-image          : url("/assets/img/background-work.jpg")

  .box
    width                       : 50vw
    height                      : 45vw
    overflow                    : hidden
    > :not(.dots)
      z-index                   : 1
    > h2
      margin                    : 0
      font-weight               : FONT_WEIGHT_NORMAL
      &, + p
        text-shadow             : 0 0 (2 * SPACE) alpha(BLACK, 50%)
      > span
        margin                  : 0 (SPACE / 2)
        line-height               : 200%
        font-weight             : FONT_WEIGHT_THIN
        color                   : THEME
      + p
        > span
          margin                : 0 (SPACE / 2)
          color                 : THEME
        &:before, &:after
          content               : ""
          margin                : 0 (SPACE / 2) (SPACE / 4) (SPACE / 2)
          font-size             : U !important
          color                 : THEME
          display               : inline-block
          height                : 2px
          width                 : SIZE = (SPACE / 5)
          height                : SIZE
          border-radius         : SIZE
          background-color      : THEME
    > p
      margin                    : 0 UNIT
      text-align                : center
      font-size                 : SIZE = (1.25 * FONT_SIZE_NORMAL)
      line-height               : 150%
      + p
        margin-top              : SPACE

@media (max-width: 1024px)
  body[data-page="landing"]
    .box
      > p
        margin                  : 0 (UNIT / 2)
        text-align              : justify

@media (max-width: 400px)
  body[data-page="landing"]
    .container
      padding                   : SPACE 0
    p
      text-align                : center
    .box
      width                     : 100vw
      &:not(.square)
        height                  : auto
        padding                 : SPACE 0
      &.square
        height                  : 100vw
      > p
        margin                  : 0 SPACE
