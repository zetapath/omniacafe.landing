@media (max-width: 400px)
  body
    > article
        > img
          width                 : 55vw

body
  > header
    height                      : HEIGHT = (1.5 * UNIT)
    position                    : fixed
    top                         : -(HEIGHT)
    left                        : 0
    right                       : 0
    z-index                     : 2
    background-color            : alpha(WHITE, 90%)
    transition                    all ANIMATION_DURATION ANIMATION_EASE
    &.scroll
      top                       : 0
    > nav
      > a
        display                 : inline-block
        margin                  : 0 SPACE
        height                  : HEIGHT = (UNIT / 1.25)
        font-size               : FONT_SIZE_BIG
        font-weight             : FONT_WEIGHT_BOLD
        line-height             : HEIGHT
        text-decoration         : none
        color                   : COLOR
        background-color        : transparent
        vertical-align          : middle
        > img
          height                : HEIGHT
        &:not(.logo)
          opacity               : 0.5
          transition              all ANIMATION_DURATION ANIMATION_EASE
          &:hover
            opacity             : 1
            box-shadow            0 (SPACE / 8) THEME

  > article
    &.landing
      position                : relative
      height                    : 100vh
      background-image          : url("/assets/img/background.jpg")
      background-size           : cover !important
      // background-position       : 50% 50%
      &.scroll
        > img, > footer
          opacity               : 0
      > span
        position                : absolute
        top                     : 0
        width                   : 100%
        height                  : 100%
        background              : url("/assets/img/background-dots.png") repeat top left
        z-index                 : 0
      > :not(span)
        z-index                 : 1
        transition                all ANIMATION_DURATION ANIMATION_EASE
      > img
        width                   : 25vw
      > footer
        position                : absolute
        left                    : 0
        right                   : 0
        bottom                  : (SPACE / 2)
        font-size               : FONT_SIZE_TINY
        text-align              : center
        color                   : rgba(255,255,255,0.25)
        > span
          color                 : THEME
        > a
          color                 : rgba(255,255,255,0.5)
          text-decoration       : none
    &.content
      margin                    : UNIT 0

  > nav
    > a
      width                     : SIZE = 50vw
      height                    : SIZE
      color                     : BACKGROUND
      text-decoration           : none
      background-color          : lighten(COLOR, 50%)
      transition                  all ANIMATION_DURATION ANIMATION_EASE
      &:hover
        background-color        : COLOR
        > h2
          > span
            opacity             : 1
      > h2
        font-weight             : FONT_WEIGHT_BOLD
        > span
          margin                : 0 (SPACE / 2)
          font-weight           : FONT_WEIGHT_THIN
          color                 : THEME
          opacity               : 0
          transition              opacity ANIMATION_DURATION ANIMATION_EASE
      > strong
        font-weight             : FONT_WEIGHT_NORMAL
        &:before, &:after
          content               : ""
          height                : (SPACE / 5)
          width                 : SPACE
          background-color      : red


  > footer
    padding                     : (2 * SPACE) 0
    font-size                   : FONT_SIZE_TINY
    text-align                  : center
    color                       : WHITE
    background-color            : darken(COLOR, 75%)
