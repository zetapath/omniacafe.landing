@import url("http://fonts.googleapis.com/css?family=Raleway:300,900")

// -- CONSTANTS ----------------------------------------------------------------
/* COLORS */
COLOR                       = #FFF
BACKGROUND                  = #4A4A4A
THEME                       = #B99D61
WHITE                       = #fff

/* FONT */
FONT_FAMILY                 = "Raleway", "Helvetica Neue", "Helvetica", "sans-serif"
FONT_SIZE                   = 1rem
FONT_SIZE_TINY              = 75%
FONT_SIZE_SMALL             = 0.9rem
FONT_SIZE_NORMAL            = 1.0rem
FONT_SIZE_BIG               = 1.2rem
FONT_WEIGHT_THIN            = 100
FONT_WEIGHT_NORMAL          = 300
FONT_WEIGHT_BOLD            = 900

/* DIMENSIONS */
UNIT                        = 4rem
SPACE                       = (UNIT / 4)
/* ANIMATIONS */
ANIMATION_DURATION          = 350ms
ANIMATION_STEPS             = 15
ANIMATION_EASE              = cubic-bezier(0.645, 0.045, 0.355, 1.000)

// -- BASE ---------------------------------------------------------------------
body
  color                     : COLOR
  font-size                 : FONT_SIZE
  font-family               : FONT_FAMILY
  background-color          : BACKGROUND
  background-image          : url("/assets/img/background.jpg")
  background-size           : cover !important
  background-position       : 50% 50%
  > section
    height                  : 100vh
    background              : url("/assets/img/background-dots.png") repeat top left
    > img
      width                 : 25vw
    > footer
      position              : absolute
      left                  : 0
      right                 : 0
      bottom                : (SPACE / 2)
      font-size             : FONT_SIZE_TINY
      text-align            : center
      color                 : rgba(255,255,255,0.25)
      > span
        color               : THEME
      > a
        color               : rgba(255,255,255,0.5)
        text-decoration     : none

// -- BUTTON -------------------------------------------------------------------
.button, button, input[type="submit"], input[type="reset"], input[type="button"]
  border                    : 1px solid #bbb
  border-radius             : BORDER-RADIUS
  &:hover, &:focus
    color                   : #333
    border-color            : #888
  &.primary
    color                   : WHITE
    background-color        : THEME
    border-color            : darken(THEME, 5%)
    &:hover, &:focus
      color                 : WHITE
      background-color      : darken(THEME, 10%)
      border-color          : darken(THEME, 15%)
